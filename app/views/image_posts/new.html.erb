<!-- app/views/image_posts/new.html.erb -->
<h1>新規画像投稿</h1>

<div class="min-h-full">
    <header>
        <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
    <h1 class="text-4xl font-bold tracking-tight text-gray-900">ECHOE</h1>
    </header>
    <main>
        <div class="mx-auto max-w-7xl py-6 sm:px-6 lg:px-8">
            <% if @image_post.errors.any? %>
                <div class="rounded-md bg-red-50 p-4 mb-6">
                    <div class="flex">
                        <div class="ml-3">
                            <h3 class="text-sm font-medium text-red-800">
                                <%= pluralize(@image_post.errors.count, "error") %> prohibited this object from being saved:
                            </h3>
                            <div class="mt-2 text-sm text-red-700">
                                <ul class="list-disc pl-5 space-y-1">
                                    <% @image_post.errors.full_messages.each do |message| %>
                                        <li><%= message %></li>
                                    <% end %>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            <% end %>

            <%= form_for @image_post do |f| %>
                <div class="space-y-6">
                    <div>
                        <%= f.label :title, "作品タイトル", class: "block text-sm font-medium leading-6 text-gray-900" %>
                        <div class="mt-2">
                            <%= f.text_field :title, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
                        </div>
                    </div>

                    <div>
                        <%= f.label :image, "投稿画像ファイル", class: "block text-sm font-medium leading-6 text-gray-900" %>
                        <div class="mt-2 flex justify-center rounded-lg border border-dashed border-gray-900/25 px-6 py-10">
                            <div class="text-center">
                                <svg class="mx-auto h-12 w-12 text-gray-300" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                                    <path fill-rule="evenodd" d="M1.5 6a2.25 2.25 0 012.25-2.25h16.5A2.25 2.25 0 0122.5 6v12a2.25 2.25 0 01-2.25 2.25H3.75A2.25 2.25 0 011.5 18V6zM3 16.06V18c0 .414.336.75.75.75h16.5A.75.75 0 0021 18v-1.94l-2.69-2.689a1.5 1.5 0 00-2.12 0l-.88.879.97.97a.75.75 0 11-1.06 1.06l-5.16-5.159a1.5 1.5 0 00-2.12 0L3 16.061zm10.125-7.81a1.125 1.125 0 112.25 0 1.125 1.125 0 01-2.25 0z" clip-rule="evenodd" />
                                </svg>
                                <p class="text-gray-400">ファイルをアップロード</p>
                                <div class="mt-4 flex text-sm leading-6 text-gray-600">
                                    <label for="image_post_image" class="relative cursor-pointer rounded-md bg-white font-semibold text-indigo-600 focus-within:outline-none focus-within:ring-2 focus-within:ring-indigo-600 focus-within:ring-offset-2 hover:text-indigo-500 w-60">
                                        <%= f.file_field :image%>
                                    </label>
                                    </div>
                                    <br><p class="pl-1 text-gray-400">またはドラッグ＆ドロップ</p>
                                <p class="text-xs leading-5 text-gray-400">PNG, JPG, GIF</p>
                            </div>
                        </div>
                    </div>

                    <div>
                        <%= f.label :name, "タグ", class: "block text-sm font-medium leading-6 text-gray-900" %>
                        <div class="mt-2">
                            <%= f.text_field :name, value: @tag_list, placeholder: ",で区切ると複数タグ登録できます", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
                        </div>
                    </div>


                    <%= f.submit '投稿', class: "button is-success" %>
                    <div>
                        <%= f.submit '投稿', class: "flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
                    </div>
                    <%= f.submit '投稿してマッチングへ', id: 'submit-image-post' %>
                </div>
            <% end %>
        </div>
    </main>
</div>
