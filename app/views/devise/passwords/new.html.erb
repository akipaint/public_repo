<div class="flex items-center justify-center min-h-screen bg-gray-100">
  <div class="bg-white p-8 rounded-md shadow-md w-[400px]">
    <h2 class="text-2xl font-bold text-gray-800 font-roboto mb-6">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-5">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="actions">
        <%= f.submit "Send Instructions",class: "w-full bg-blue-400 text-white py-2 rounded-md font-roboto hover:bg-blue-600 transition duration-150" %>
      </div>
    <% end %>

    <!--部分テンプレートをレンダリング-->
    <div class="actions mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>